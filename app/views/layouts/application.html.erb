<!DOCTYPE html>
<html>
  <head>
    <title>MissionApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="site-header">
    <h1 class="main-logo"><a
      data-turbolinks="false"
      href="<%= root_url %>" 
      >MISSION APP</a></h1>
    <div class="login-info">
      <% if current_user %>
        <p><%= current_user.username %></p>
        <form action="<%= session_url %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <%= auth_token %>
          <input type="submit" value="Logout">
        </form>
      <% else %>
        <p><a data-turbolinks="false" href="<%= new_session_url %>">Login</a></p>
        <p><a data-turbolinks="false" href="<%= new_user_url %>">Sign Up</a></p>
      <% end %>
    </div>
  </header>
  <br>
  <body>
    <div class="Navigation Links">
      <a data-turbolinks="false" href="<%= new_goal_url %>">New Goal</a>
      <a data-turbolinks="false" href="<%= cheers_url %>">My Cheers!</a>
    </div>
    <div class="notices/errors">
      <% if flash[:notices] %>
        <br>
        <%= flash[:notices].join(", ") %>
        <br>
      <% end %>
      <% if flash[:errors] %>
        <br>
        <%= flash[:errors].join(", ") %>
        <br>
      <% end %>
    </div>
    <%= yield %>
  </body>
  </html>
  